<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/orange_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <!-- Base application theme. -->
    <style name="SwitchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="AppThemeToolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/orange_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

    </style>

    <!-- Base application theme. -->
    <style name="SwitchThemeToolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="AppThemeLightStatus" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="AppThemeLightStatus.FullScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!--        <item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="ComponentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="DialogFragmentAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_custom</item>
        <item name="android:windowExitAnimation">@anim/fade_out_custom</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.TitleTop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.TitleTop.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.BreakingTime">
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.BreakingTime.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Divider.Gray">
        <item name="android:background">@color/orange_light</item>
    </style>

</resources>